{
  "name": "lex.js",
  "version": "1.0.0",
  "description": "Reimplementation of Lexicon Viewer",
  "bin": "index.js",
  "pkg": {
    "assets": [
      "index.html",
      "public/**/*"
    ]
  },
  "scripts": {
    "start:dev": "node index.js",
    "start:production": "export NODE_ENV=production && node index.js",
    "bundle:transpile": "babel lib/ --out-dir tmp/ && babel src/ --out-dir tmp/",
    "bundle:concat": "uglifyjs tmp/mousetrap.min.js tmp/mousetrap-global-bind.min.js tmp/cp866.js tmp/fastclick.js tmp/fileSaver.min.js tmp/func.js tmp/config-default.js tmp/lex.js tmp/gui.js tmp/fonts.js -o tmp/bundle.js",
    "bundle:uglify": "uglifyjs tmp/bundle.js -c -o tmp/bundle.min.js",
    "bundle:addlocalforage": "uglifyjs tmp/localforage.min.js tmp/bundle.min.js -o public/js/bundle.min.js",
    "bundle:clean": "rm -rf tmp/",
    "bundle:build": "npm run bundle:transpile && npm run bundle:concat && npm run bundle:uglify && npm run bundle:addlocalforage && npm run bundle:clean",
    "binary:create": "pkg . --targets node10-linux-x64,node10-linux-x86,node10-macos-x64,node10-win-x64,node10-win-x86 --out-path build/",
    "binary:prepare": "bash scripts/prepareBinary.sh",
    "binary:build": "npm run binary:create && npm run binary:prepare",
    "all:build": "npm run bundle:build && npm run binary:build",
    "heroku-postbuild": "npm run bundle:build"
  },
  "keywords": [],
  "author": "lex-js & limitedeternity",
  "license": "GPL-3.0",
  "dependencies": {
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "helmet": "^3.15.1",
    "opn": "^5.4.0",
    "path-is-inside": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "pkg": "^4.3.7",
    "uglify-js": "^3.4.9",
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "grunt": "^0.4.5",
    "grunt-babel": "^6.0.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-uglify": "^1.0.1",
    "grunt-contrib-watch": "^1.0.0",
    "localforage": "^1.4.2"
  }
}
